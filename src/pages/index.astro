---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pt-8 pb-6">
      <h1 class="my-4 inline-flex items-center text-4xl font-bold sm:my-8 sm:text-5xl">
        <img
          src="/brand/bottle.png"
          alt=""
          width="44"
          height="44"
          class="w-10 h-10 sm:w-12 sm:h-12 mr-3 sm:mr-4 shrink-0 opacity-90 dark:hidden"
        />
        <img
          src="/brand/bottle-white.png"
          alt=""
          width="44"
          height="44"
          class="w-10 h-10 sm:w-12 sm:h-12 mr-3 sm:mr-4 shrink-0 opacity-90 hidden dark:block"
        />
        Lost Bytes
      </h1>

      <p class="text-lg">
        Notes, experiments, and fragments I didn't want to lose.
      </p>
      <p class="mt-2 text-sm opacity-75">
        A public notebook â€” topics evolve over time.
      </p>
    </section>

    <section id="start-here" class="pt-6 pb-6">
      <h2 class="text-xl font-semibold tracking-wide mb-4">Start here</h2>
      <div class="flex flex-wrap gap-4">
        <LinkButton href="/about" class="underline decoration-dashed underline-offset-4 hover:text-accent">
          About
        </LinkButton>
        <LinkButton href="/tags" class="underline decoration-dashed underline-offset-4 hover:text-accent">
          Tags
        </LinkButton>
        <LinkButton href="/rss.xml" class="underline decoration-dashed underline-offset-4 hover:text-accent inline-flex items-center gap-1.5">
          RSS
          <IconRss
            width={16}
            height={16}
            class="stroke-current rtl:-rotate-90"
          />
        </LinkButton>
      </div>
    </section>

    <Hr />

    <section id="entry-points" class="pt-6 pb-6">
      <h2 class="text-xl font-semibold tracking-wide mb-4">Entry points</h2>
      <div class="flex flex-wrap gap-4">
        <LinkButton href="/tags/language" class="underline decoration-dashed underline-offset-4 hover:text-accent">
          Language
        </LinkButton>
        <LinkButton href="/tags/writing" class="underline decoration-dashed underline-offset-4 hover:text-accent">
          Writing
        </LinkButton>
        <LinkButton href="/tags/ai" class="underline decoration-dashed underline-offset-4 hover:text-accent">
          AI
        </LinkButton>
      </div>
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pt-12 pb-6">
            <h2 class="text-2xl font-semibold tracking-wide">Featured</h2>
            <ul>
              {featuredPosts.map(data => (
                <Card variant="h3" {...data} />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">Latest notes</h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        All notes
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
